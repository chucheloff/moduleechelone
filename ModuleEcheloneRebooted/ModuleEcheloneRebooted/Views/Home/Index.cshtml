

@{
    ViewData["Title"] = "Home Page";
}

<!-- Welcome title -->
<div class="container-fluid padding" style="max-width: 80%;">
    <div class="row text-center welcome padding" >
        <div class="col-12">
            <h1 class="display-4">Welcome the sound</h1>
        </div>
    </div>
</div>
<!--Product imAges slider-->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width:fit-content; max-height: 500px !important;">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" style="text-align: center;">
        <div class="carousel-item active" style="text-align: center;">
            <img class="d-block w-100 carouselPic" src="~/src/background5.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h2 style="text-shadow: 1px 1px 2px black, 3px 3px 12px black;">Excellence is not the limit</h2>
                <a asp-controller="Store" asp-action="Catalog"><button type="button" class="btn btn-outline-light btn-lg" href="#">LEARN MORE</button></a>
                <a asp-controller="Store" asp-action="Catalog"><button type="button" class="btn btn-primary btn-lg"> SHOP NOW </button></a>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 carouselPic" src="~/src/background1.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 carouselPic" src="~/src/background4.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 carouselPic" src="~/src/background2.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


