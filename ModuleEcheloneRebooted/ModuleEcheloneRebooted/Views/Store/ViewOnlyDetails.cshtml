@model ModuleEcheloneRebooted.Models.ProductModel

@{
    ViewBag.Title = Model.Name; 
    Layout = null;
}
<div style="text-align: center;" >
    <h4 class="display-4">@Model.Name</h4>
    <hr/>
        <table class="table">
            <tr>
                <th>ProductID</th>
                <td>@Model.ProductId</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Price</th>  
                <td>@Model.Price</td>
            </tr>
            <tr>
                <th>Buy Price</th>
                <td>@Model.BuyPrice</td>
            </tr>
            <tr>
                <th>Stock </th>
                <td>@Model.Stock</td>
            </tr>
            <tr>
                <th>Manufacturer </th>
                <td>@Model.Manufacturer</td>
            </tr>
            <tr>
                <th>Short Description</th>
                <td>@Model.Description_Short</td>
            </tr>
            <tr>
                <th>Fulll Description</th>
                <td>@Model.Description_Full</td>
            </tr>
            <tr>
                <th>Image name</th>
                <td>@Model.Img</td>
            </tr>
            <tr>
                <th>Breakpoints</th>
                <td>@Model.Breakpoints</td>
            </tr>
        </table>
</div>